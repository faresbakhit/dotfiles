# i3 config file (v4)

#
# ~/.config/i3/config
# i3 configuration file
#
# https://i3wm.org/docs/userguide.html
#

include $HOME/.config/i3/config.d/*

font pango:Source Code Pro 9
default_border pixel 2

set $alt   Mod1
set $major Mod3
set $minor Mod4

# Critical functions
bindsym $minor+r restart
bindsym $minor+q exec "i3-msg exit"

# Focusing containers
bindsym $major+Left focus left
bindsym $major+Right focus right
bindsym $major+Up focus up
bindsym $major+Down focus down

# Move containers
bindsym $major+Control+Left move left
bindsym $major+Control+Right move right
bindsym $major+Control+Up move up
bindsym $major+Control+Down move down

# Resizing containers
bindsym $major+$alt+Left resize shrink width 10 px or 10 ppt
bindsym $major+$alt+Right resize grow width 10 px or 10 ppt
bindsym $major+$alt+Up resize shrink height 10 px or 10 ppt
bindsym $major+$alt+Down resize grow height 10 px or 10 ppt

# Control containers
bindsym $major+q kill
bindsym $major+v split vertical
bindsym $major+h split horizontal
bindsym $major+s layout toggle split
bindsym $major+w layout toggle tabbed split
bindsym $major+f fullscreen toggle

# Changing workspaces
bindsym $major+1 workspace number 1
bindsym $major+2 workspace number 2
bindsym $major+3 workspace number 3
bindsym $major+4 workspace number 4
bindsym $major+5 workspace number 5
bindsym $major+6 workspace number 6
bindsym $major+7 workspace number 7
bindsym $major+8 workspace number 8
bindsym $major+9 workspace number 9

# Move containers to workspaces
bindsym $major+Shift+1 move container to workspace number 1
bindsym $major+Shift+2 move container to workspace number 2
bindsym $major+Shift+3 move container to workspace number 3
bindsym $major+Shift+4 move container to workspace number 4
bindsym $major+Shift+5 move container to workspace number 5
bindsym $major+Shift+6 move container to workspace number 6
bindsym $major+Shift+7 move container to workspace number 7
bindsym $major+Shift+8 move container to workspace number 8
bindsym $major+Shift+9 move container to workspace number 9

# Floating windows
floating_modifier $major
tiling_drag modifier titlebar
bindsym $major+space floating toggle
bindsym $major+Shift+space focus mode_toggle

# Screenshots
## Save to $HOME/Pictures
### Print => Fullscreen screenshot 
### Major + Print => Active window screenshot
### Ctrl + Print => Screen slice screenshot
## Save to clipboard
### Shift + Print => Fullscreen screenshot
### Shift + Major + Print => Active window screenshot
### Shift + Ctrl + Print => Screen slice screenshot
bindsym Print exec --no-startup-id maim "$HOME/Pictures/Screenshots/$(date -Iseconds).png"
bindsym $major+Print exec --no-startup-id maim --window $(xdotool getactivewindow) "$HOME/Pictures/Screenshots/$(date -Iseconds).png"
bindsym Ctrl+Print exec --no-startup-id maim --select "$HOME/Pictures/Screenshots/$(date -Iseconds).png"
bindsym Shift+Print exec --no-startup-id maim | xclip -selection clipboard -t image/png
bindsym Shift+$major+Print exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Shift+Ctrl+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

bindsym $major+o exec --no-startup-id picom-trans --current --toggle
bindsym $major+Return exec --no-startup-id alacritty --working-directory="`xcwd`"
set $rofi_common -font 'Source Code Pro 12' -theme Arc-Dark
bindsym $major+period exec --no-startup-id rofi -modi emoji -show emoji $rofi_common
bindsym $major+d exec --no-startup-id rofi -modi drun -show drun $rofi_common
bindsym $major+c exec --no-startup-id rofi -modi calc -show calc $rofi_common

bar {
    status_command i3status
    colors {
        background #151515
    }
}
